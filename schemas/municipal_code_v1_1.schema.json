{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://legicity.com/schemas/municipal_code_v1_1.schema.json",
  "title": "Legicity Municipal Code Schema v1.1",
  "type": "object",
  "required": ["schema_version", "code"],
  "properties": {
    "schema_version": { "type": "string", "const": "1.1" },
    "code": { "$ref": "#/$defs/Code" }
  },
  "$defs": {
    "Code": {
      "type": "object",
      "required": ["code_id", "jurisdiction", "source", "titles"],
      "properties": {
        "code_id": { "type": "string", "minLength": 1 },
        "jurisdiction": {
          "type": "object",
          "required": ["name", "state"],
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "state": { "type": "string", "minLength": 2 },
            "country": { "type": "string", "default": "US" }
          },
          "additionalProperties": false
        },
        "source": {
          "type": "object",
          "required": ["source_type", "retrieved_at"],
          "properties": {
            "source_type": { "type": "string", "enum": ["html", "pdf", "mixed"] },
            "source_url": { "type": "string" },
            "retrieved_at": { "type": "string", "format": "date-time" },
            "content_hash": { "type": "string" }
          },
          "additionalProperties": false
        },
        "last_published_at": { "type": "string", "format": "date" },
        "titles": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Title" }
        }
      },
      "additionalProperties": false
    },

    "Title": {
      "type": "object",
      "required": ["id", "number", "label", "chapters"],
      "properties": {
        "id": { "type": "string", "pattern": "^t\\d{1,3}$" },
        "number": { "type": "integer", "minimum": 1 },
        "label": { "type": "string", "minLength": 1 },
        "status": { "$ref": "#/$defs/Status" },
        "chapters": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Chapter" }
        },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },

    "Chapter": {
      "type": "object",
      "required": ["id", "citation", "label", "sections"],
      "properties": {
        "id": { "type": "string", "pattern": "^[0-9]{1,3}_[0-9]{2}(_[0-9]{2})?$" },
        "citation": { "type": "string", "pattern": "^[0-9]{1,3}\\.[0-9]{2}(\\.[0-9]{2})?$" },
        "label": { "type": "string", "minLength": 1 },
        "status": { "$ref": "#/$defs/Status" },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/Section" }
        },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },

    "Section": {
      "type": "object",
      "required": ["id", "citation", "label", "parent_id", "text", "status", "references", "history", "tables"],
      "properties": {
        "id": { "type": "string", "pattern": "^[0-9]{1,3}_[0-9]{2}_[0-9]{3}$" },
        "citation": { "type": "string", "pattern": "^[0-9]{1,3}\\.[0-9]{2}\\.[0-9]{3}$" },
        "citation_raw": { "type": "string" },
        "label": { "type": "string", "minLength": 1 },
        "parent_id": { "type": "string", "pattern": "^[0-9]{1,3}_[0-9]{2}(_[0-9]{2})?$" },

        "text": { "type": "string" },

        "subsections": {
          "type": "array",
          "items": { "$ref": "#/$defs/Subsection" }
        },

        "status": { "$ref": "#/$defs/Status" },

        "references": {
          "type": "array",
          "items": { "$ref": "#/$defs/Reference" }
        },

        "history": {
          "type": "array",
          "items": { "$ref": "#/$defs/HistoryEvent" }
        },

        "tables": {
          "type": "array",
          "items": { "$ref": "#/$defs/TableRef" }
        },

        "tags": { "type": "array", "items": { "type": "string" } },

        "qa_hints": {
          "type": "object",
          "properties": {
            "is_definitions": { "type": "boolean" },
            "is_procedure": { "type": "boolean" },
            "is_enforcement": { "type": "boolean" },
            "zone_names": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "Subsection": {
      "type": "object",
      "required": ["path", "label", "text"],
      "properties": {
        "path": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "text": { "type": "string" }
      },
      "additionalProperties": false
    },

    "Reference": {
      "type": "object",
      "required": ["raw", "type", "target_citation", "resolution"],
      "properties": {
        "raw": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["section", "chapter", "title", "external"] },
        "target_citation": { "type": "string", "minLength": 1 },
        "target_id": { "type": "string" },
        "resolution": { "type": "string", "enum": ["resolved", "unresolved"] },
        "note": { "type": "string" }
      },
      "additionalProperties": false
    },

    "HistoryEvent": {
      "type": "object",
      "required": ["raw"],
      "properties": {
        "raw": { "type": "string", "minLength": 1 },
        "ordinance": { "type": "string" },
        "action": { "type": "string", "enum": ["adopted", "amended", "repealed", "renumbered", "recodified", "unknown"] },
        "date": { "type": "string", "format": "date" }
      },
      "additionalProperties": false
    },

    "TableRef": {
      "type": "object",
      "required": ["table_id", "role", "resolution"],
      "properties": {
        "table_id": { "type": "string", "minLength": 1 },
        "role": { "type": "string", "enum": ["development_standards", "use_table", "fee_schedule", "other"] },
        "resolution": { "type": "string", "enum": ["present", "missing"] },
        "note": { "type": "string" }
      },
      "additionalProperties": false
    },

    "Status": {
      "type": "string",
      "enum": ["active", "repealed", "reserved", "renumbered", "unknown"]
    }
  }
}
